<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/settingsOptionIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/tick_24"
        app:layout_constraintBottom_toTopOf="@id/iconTitle"
        app:layout_constraintEnd_toEndOf="@+id/iconTitle"
        app:layout_constraintStart_toStartOf="@+id/iconTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/iconTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuration"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsOptionIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>