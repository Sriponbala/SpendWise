<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recordPage"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AddRecordFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/app_bar_add_record"
        android:background="?android:attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar_add_record"
            app:title="Add Record"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/baseline_close_24"
            app:navigationIconTint="@color/white"
            android:layout_height="match_parent" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addRecordScrollView">
        <LinearLayout
            android:id="@+id/linearAddRecord"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:selectionRequired="true"
                app:singleSelection="true">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/incomeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Income"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:strokeWidth="1dp"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/expenseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:strokeWidth="1dp"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/amountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:text="Amount"
                    style="@style/HeadingTextStyle"
                    app:layout_constraintEnd_toStartOf="@id/amountTextMandatory"
                    app:layout_constraintBottom_toTopOf="@id/categoryTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/constraintLayout" />

                <TextView
                    android:id="@+id/amountTextMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="2dp"
                    android:paddingVertical="16dp"
                    android:text="*"
                    android:textColor="@color/error_colour"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/amountTextView"
                    app:layout_constraintStart_toEndOf="@id/amountTextView"
                    app:layout_constraintTop_toTopOf="@id/constraintLayout" />

                <EditText
                    android:id="@+id/amountEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:inputType="numberDecimal"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:hint="Enter Amount"
                    app:layout_constraintBaseline_toBaselineOf="@+id/amountTextView"
                    app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/guideline" />

                <TextView
                    android:id="@+id/categoryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="16dp"
                    android:text="Category"
                    style="@style/HeadingTextStyle"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="@+id/amountTextView"
                    app:layout_constraintTop_toBottomOf="@id/amountTextView" />

                <TextView
                    android:id="@+id/categoryTextMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="2dp"
                    android:paddingVertical="16dp"
                    android:text="*"
                    android:textColor="@color/error_colour"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/categoryTextView"
                    app:layout_constraintBottom_toBottomOf="@+id/categoryTextView"
                    app:layout_constraintTop_toBottomOf="@+id/amountTextMandatory" />


                <EditText
                    android:id="@+id/categoryEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="true"
                    android:hint="Select Category"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/categoryTextView"
                    app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/guideline" />

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="16dp"
                    android:text="Date"
                    style="@style/HeadingTextStyle"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="@id/amountTextView"
                    app:layout_constraintTop_toBottomOf="@id/categoryTextView" />

                <TextView
                    android:id="@+id/dateTextMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="2dp"
                    android:paddingVertical="16dp"
                    android:text="*"
                    android:textColor="@color/error_colour"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/dateTextView"
                    app:layout_constraintStart_toEndOf="@+id/dateTextView"
                    app:layout_constraintTop_toBottomOf="@+id/categoryTextMandatory" />


                <EditText
                    android:id="@+id/dateEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:inputType="date"
                    android:hint="Select Date"
                    android:maxLines="1"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/dateTextView"
                    app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/guideline" />

                <TextView
                    android:id="@+id/noteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="16dp"
                    android:text="Title"
                    style="@style/HeadingTextStyle"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="@+id/amountTextView"
                    app:layout_constraintTop_toBottomOf="@id/dateTextView" />

                <EditText
                    android:id="@+id/noteEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="35"
                    android:hint="Enter Title"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/noteTextView"
                    app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/guideline" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/descriptionTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Description"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/noteEditText"
                    app:layout_constraintStart_toStartOf="@+id/noteTextView"
                    app:layout_constraintTop_toBottomOf="@id/noteTextView">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/descriptionTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.29927006" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Save"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/descriptionTextInputLayout" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>