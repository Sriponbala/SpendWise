<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AddGoalFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="#449CF3"
            app:strokeWidth="2dp"
            android:layout_margin="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintBudget"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/viewBudgetNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/HeadingTextStyle"
                    android:text="BudgetName???????????????"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxEms="8"
                    app:layout_constraintStart_toStartOf="@id/constraintBudget"
                    app:layout_constraintTop_toTopOf="@id/constraintBudget" />
                <TextView
                    android:id="@+id/viewBudgetCurrencySymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="@string/rupee_symbol"
                    android:maxLines="1"
                    app:layout_constraintEnd_toStartOf="@id/viewBudgetAmountText"
                    app:layout_constraintTop_toTopOf="@id/viewBudgetNameText" />
                <TextView
                    android:id="@+id/viewBudgetAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="100000000000000000000"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxEms="8"
                    app:layout_constraintEnd_toEndOf="@id/constraintBudget"
                    app:layout_constraintTop_toTopOf="@id/viewBudgetNameText" />
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/viewBudgetProgressBarRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    app:trackThickness="15dp"
                    app:trackColor="@color/progressBarAtFirst"
                    app:layout_constraintTop_toBottomOf="@id/viewBudgetNameText"
                    app:layout_constraintStart_toStartOf="@id/viewBudgetNameText"
                    app:layout_constraintEnd_toEndOf="@id/viewBudgetAmountText"/>
                <TextView
                    android:id="@+id/spentCurrencySymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="@string/rupee_symbol"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="@id/viewBudgetNameText"
                    app:layout_constraintTop_toBottomOf="@id/viewBudgetProgressBarRecycler" />
                <TextView
                    android:id="@+id/viewSpentAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="1000000000000000000000000"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxEms="8"
                    app:layout_constraintStart_toEndOf="@id/spentCurrencySymbol"
                    app:layout_constraintTop_toTopOf="@id/spentCurrencySymbol" />

                <TextView
                    android:id="@+id/remainingCurrencySymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="@string/rupee_symbol"
                    android:maxLines="1"
                    app:layout_constraintEnd_toStartOf="@id/viewRemainingAmountText"
                    app:layout_constraintTop_toTopOf="@id/spentCurrencySymbol" />
                <TextView
                    android:id="@+id/viewRemainingAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="10000000000000000000000"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxEms="8"
                    app:layout_constraintEnd_toEndOf="@id/viewBudgetAmountText"
                    app:layout_constraintTop_toTopOf="@id/spentCurrencySymbol" />
                <TextView
                    android:id="@+id/spentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Spent"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="@id/viewBudgetNameText"
                    app:layout_constraintTop_toBottomOf="@id/spentCurrencySymbol" />
                <TextView
                    android:id="@+id/viewRemainsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Remains"
                    android:maxLines="1"
                    app:layout_constraintEnd_toEndOf="@id/viewBudgetAmountText"
                    app:layout_constraintTop_toTopOf="@id/spentText" />

                <TextView
                    android:id="@+id/viewBudgetPercentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60%"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/viewBudgetProgressBarRecycler"
                    app:layout_constraintEnd_toEndOf="@+id/viewBudgetProgressBarRecycler"
                    app:layout_constraintTop_toTopOf="@+id/viewBudgetProgressBarRecycler" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!--<View
            android:background="#96C5F3"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>-->

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/HeadingTextStyle"
                android:paddingEnd="5dp"
                android:text="Name"/>
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="16sp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:textColor="@color/expenseColour"/>-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/budgetNameView"
                    style="@style/TextStyle"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/HeadingTextStyle"
                android:paddingEnd="5dp"
                android:text="Amount"/>
            <!--
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="*"
                        android:textSize="16sp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:textColor="@color/expenseColour"/>
            -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    style="@style/TextStyle"
                    android:id="@+id/budgetAmountView"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/HeadingTextStyle"
                android:paddingEnd="5dp"
                android:text="Period"/>
            <!--
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="*"
                        android:textSize="16sp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:textColor="@color/expenseColour"/>
            -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    style="@style/TextStyle"
                    android:id="@+id/budgetPeriodView"
                    android:text="Monthly"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/HeadingTextStyle"
                android:paddingEnd="5dp"
                android:text="Category"/>
            <!--
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="*"
                        android:textSize="16sp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:textColor="@color/expenseColour"/>
            -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:focusable="false"
                android:enabled="false"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/budgetCategoryView"
                    android:layout_width="match_parent"
                    style="@style/TextStyle"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>



