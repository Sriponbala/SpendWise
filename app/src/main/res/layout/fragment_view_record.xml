<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recordPage"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/app_bar_view_record"
        android:background="?android:attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar_view_record"
            app:title="Record"
            app:titleTextColor="@color/white"
            app:menu="@menu/alter_record_menu"
            app:navigationIcon="@drawable/back_arrow"
            app:navigationIconTint="@color/white"
            android:layout_height="match_parent" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/HeadingTextStyle"
                    android:paddingEnd="5dp"
                    android:text="Record Type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_marginStart="2dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="entertainment"
                    android:id="@+id/viewRecordTypeEditText"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/HeadingTextStyle"
                    android:paddingEnd="5dp"
                    android:text="Amount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_marginStart="35dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="entertainment"
                    android:id="@+id/viewAmountEditText"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/HeadingTextStyle"
                    android:paddingEnd="5dp"
                    android:text="Category"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_marginStart="27dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="entertainment"
                    android:id="@+id/viewCategoryEditText"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/HeadingTextStyle"
                    android:paddingEnd="5dp"
                    android:text="Date"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_marginStart="59dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="entertainment"
                    android:id="@+id/viewDateEditText"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/HeadingTextStyle"
                    android:paddingEnd="5dp"
                    android:text="Title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_marginStart="59dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="entertainment"
                    android:id="@+id/viewNoteEditText"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewEmptyDescription"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/HeadingTextStyle"
                    android:paddingEnd="5dp"
                    android:text="Description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_marginStart="9dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>

            </LinearLayout>

            <TextView
                android:id="@+id/viewRecordDescriptionLabel"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/HeadingTextStyle"
                android:text="Description    :"/>
            <androidx.core.widget.NestedScrollView
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:id="@+id/descriptionScrollView"
                android:fadeScrollbars="true"
                android:background="@drawable/rectangle_description_box"
                android:padding="16dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/descriptionTextField"
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

