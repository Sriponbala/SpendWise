    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/categoryLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_background"
            android:padding="6dp"
            android:src="@drawable/piggy_bank"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearRecord1"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="2"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@id/linearRecord2"
            app:layout_constraintStart_toEndOf="@id/categoryLogo"
            android:orientation="vertical">
            <TextView
                android:id="@+id/noteTextView"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textAlignment="viewStart"
                android:maxLines="1"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/categoryTextView"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="1"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRecord2"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1.5"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/linearRecord1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/amountTextView"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/dateTextView"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_gravity="end"
                android:maxLines="1"
                android:textSize="14sp"
                />
        </LinearLayout>
