<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpendWise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:statusBarColor">@color/primaryVariant</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="itemRippleColor">@color/rippleLight</item>
        <item name="colorTertiary">@color/cardBehindScreenLight</item>
        <item name="colorTertiaryContainer">@color/white</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorOnTertiaryContainer">@color/black</item>


    </style>

    <style name="CardViewStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="ScreenBackground">
        <item name="android:background">@color/cardBehindScreenLight</item>
    </style>

    <style name="ExtraViewBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom_sheet</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom_sheet</item>
    </style>

    <style name="SpinnerTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Theme.SpendWise.ToolbarStyle" parent="Theme.SpendWise">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Theme.SpendWise.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/new_search_icon</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item> // change this color to the required cursor color your need.
        <item name="colorControlHighlight">@color/white</item>

        <item name="android:textColor">@color/white</item> <!-- Set text color to white -->
        <item name="android:textColorHint">#D0D1D5</item> <!-- Set hint text color to white -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Gets rid of the "underline" in the text -->
<!--        <item name="queryBackground">@color/white</item>-->
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
<!--        <item name="queryHint">@string/search_hint</item>-->
    </style>

    <style name="Theme.SpendWise.NewSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
<!--        <item name="searchIcon">@drawable/new_search_icon</item>-->
        <item name="colorControlNormal">@color/primaryBlue</item>
        <item name="colorControlActivated">@color/primaryBlue</item> // change this color to the required cursor color your need.
        <item name="colorControlHighlight">@color/primaryBlue</item>

        <item name="android:textColor">@color/black</item> <!-- Set text color to white -->
        <item name="android:textColorHint">#FFA0A0A0</item> <!-- Set hint text color to white -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

    </style>


    <style name="Theme.SpendWise.SpinnerStyle" parent="Theme.SpendWise">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">#515050</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Theme.SpendWise.ExtendedFab" parent="Theme.SpendWise">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>


</resources>